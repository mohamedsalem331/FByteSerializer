{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "outDir": "./dist",
    "moduleDetection": "force",
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
